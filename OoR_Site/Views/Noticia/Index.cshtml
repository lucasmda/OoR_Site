@model IEnumerable<OoR_Site.Models.Noticia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
        <h2>Noticias</h2>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-6 text-right">
        @Html.ActionLink("Cadastre uma nova Notícia", "Create", new { @class = "btn" })
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.produto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.produto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
