@model OoR_Site.Models.Cliente

@{
    ViewBag.Title = "Cadastro de Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <section>
            @using (Html.BeginForm())
            {
                <h4>Digite a sua senha abaixo!</h4>
                <hr />
                @Html.HiddenFor(model => model.Id)

                <div class="row">
                    <div class="col-sm-12 col-md-9 col-md-9 col-md-offset-3 col-lg-offset-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.senha, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBox("senha", "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salvar" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

