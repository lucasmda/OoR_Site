@model OoR_Site.Models.Cliente

@{
    ViewBag.Title = "Ja sou cliente!";
}

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <section>
            @using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Bem Vindo!</h4>
                <hr />
                <div class="row">
                    <div class="col-sm-12 col-md-9 col-md-9 col-md-offset-3 col-lg-offset-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cpf, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.cpf, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Log in" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>
