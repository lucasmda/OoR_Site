@model OoR_Site.Models.OpcoesInvestimento

@{
    ViewBag.Title = "Investir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Investir</h2>
@if (ViewBag.Errors != null)
                {
<div class="alert alert-danger" role="alert">
    @ViewBag.Errors
</div>
                }

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Descricao", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownList("Opcao", new SelectList(ViewBag.Opcoes, "Id", "descricao"),
                                "Selecione uma Opção de Investimento", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Quantidade", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Quantidade", new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cpf", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Cpf", new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("Senha", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Senha", new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Investir" class="btn btn-default" />
            </div>
        </div>
    </div>
}
