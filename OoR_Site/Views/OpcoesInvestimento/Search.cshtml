@model OoR_Site.Models.ClienteOpcao

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Search</h2>

<div class="row">
    <h4>Pesquise um Investimento</h4>
    <hr />
    <div class="col-sm-12 col-md-9 col-md-9 col-md-offset-3 col-lg-offset-3">
        <section>
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Nome", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Editor("Nome", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Search" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>